@model IEnumerable<Entity.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumTelefonoCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CDireccion.NDireccion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTelefonoCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CDireccion.NDireccion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CCliente }) |
                @Html.ActionLink("Details", "Details", new { id = item.CCliente }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CCliente })
            </td>
        </tr>
    }

</table>
